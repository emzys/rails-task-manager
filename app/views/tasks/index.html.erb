<div class="container">
  <%# <div class="d-flex justify-content-between"> %>
  <div class="d-flex align-items-center">
    <h1>Tasks </h1>
    <%= link_to new_task_path do %>
      <i class="fas fa-plus"></i>
    <% end %>
  </div>
  <div class="tasks">
    <% @tasks.each do |task| %>
      <div class="task">
        <p><%= link_to task.title, task_path(task) %> - <%= task.details %></p>
      </div>
    <% end %>
  </div>
</div>
